          "type": "string"
        },
        "summary": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "designDecision": {
          "type": "string"
        },
        "decisionCategory": {
          "type": "string"
        },
        "concepts": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "qualityAttributes": {
